{
   "env": {
    "browser": true,
    "es2021": true
  },
   "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "extends": [
    "next/core-web-vitals",
    "standard",
    "plugin:tailwindcss/recommended",
    "plugin:@typescript-eslint/recommended",
    "prettier"
  ],
    "plugins": ["react", "tailwindcss/recommended", "@typescript-eslint", "import-helpers", "unused-imports"],
  "rules": {
    "camelcase": "off",
    "quotes": ["warn", "single"],
    "semi": ["warn", "never"]
  }
}
